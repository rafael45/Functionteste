name: 🚀 Deploy Azure Function (.NET) via ZIP

on:
  push:
    branches:
      - main
  workflow_dispatch:

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      - name: 📥 Checkout do código
        uses: actions/checkout@v3

      - name: 🛠️ Instalar .NET SDK
        uses: actions/setup-dotnet@v3
        with:
          dotnet-version: '6.0.x'  # ou 7.0.x ou a versão do seu projeto

      - name: 📦 Publicar projeto
        run: |
          dotnet publish -c Release -o ./publish

      - name: 🚀 Deploy via ZIP
        uses: azure/webapps-deploy@v2
        with:
          app-name: testerafaelfunctions
          publish-profile: ${{ secrets.AZURE_FUNCTIONAPP_PUBLISH_PROFILE }}
          package: ./publish
